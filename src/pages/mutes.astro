---
import Layout from "../layouts/Layout.astro";
import PunishmentCard from "../components/PunishmentCard.astro";
import Pagination from "../components/Pagination.astro";
import EmptyState from "../components/EmptyState.astro";
import { getMutes, getPlayerName } from "../lib/queries";

const page = Math.max(1, parseInt(Astro.url.searchParams.get("page") || "1"));
const perPage = 15;

let mutesResult;
let error = null;

try {
  mutesResult = await getMutes(page, perPage, true);
} catch (e) {
  console.error("Error fetching mutes:", e);
  error = e;
  mutesResult = {
    data: [],
    total: 0,
    page: 1,
    perPage,
    totalPages: 0,
    hasNext: false,
    hasPrev: false,
  };
}

const mutesWithNames = await Promise.all(
  mutesResult.data.map(async (mute) => ({
    ...mute,
    playerName: (await getPlayerName(mute.uuid || "")) || "Desconocido",
  }))
);

const activeMutes = mutesResult.data.filter((m) => m.active === 1).length;
---

<Layout
  title="Silencios"
  description="Lista de jugadores silenciados en Mycraft Network"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div
      class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8 gap-3"
    >
      <div>
        <h1
          class="text-3xl font-clash font-bold text-white flex items-center gap-3"
        >
          Silencios
        </h1>
      </div>
      <div
        class="flex items-center gap-2 px-4 py-2 rounded-xl bg-yellow-500/10 border border-yellow-500/20 w-fit"
      >
        <span class="relative flex h-2 w-2">
          <span
            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-yellow-400 opacity-75"
          ></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-yellow-500"
          ></span>
        </span>
        <span class="text-sm text-yellow-400 font-medium">
          {activeMutes} activos en esta p√°gina
        </span>
      </div>
    </div>

    {
      error ? (
        <EmptyState
          type="error"
          message="Error al cargar los silencios. Por favor intenta de nuevo."
        />
      ) : mutesWithNames.length === 0 ? (
        <EmptyState type="empty" message="No hay silencios para mostrar." />
      ) : (
        <div class="space-y-3">
          {mutesWithNames.map((mute, index) => (
            <div class={`scroll-reveal stagger-${Math.min(index + 1, 10)}`}>
              <PunishmentCard punishment={mute} type="mute" />
            </div>
          ))}
        </div>
      )
    }

    <div class="mt-8">
      <Pagination
        currentPage={mutesResult.page}
        totalPages={mutesResult.totalPages}
        baseUrl={Astro.url.pathname}
      />
    </div>
  </div>
</Layout>
