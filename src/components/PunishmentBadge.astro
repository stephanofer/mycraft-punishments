---
import type { PunishmentType } from '../lib/types';
import { getPunishmentTypeLabel, getPunishmentTypePluralLabel } from '../lib/utils';

interface Props {
  type: PunishmentType;
  variant?: 'default' | 'small';
}

const { type, variant = 'default' } = Astro.props;

const label = getPunishmentTypeLabel(type);

const typeStyles = {
  ban: {
    bg: 'bg-red-500/15',
    border: 'border-red-500/30',
    text: 'text-red-400',
    icon: '',
  },
  mute: {
    bg: 'bg-yellow-500/15',
    border: 'border-yellow-500/30',
    text: 'text-yellow-400',
    icon: '',
  },
  warning: {
    bg: 'bg-orange-500/15',
    border: 'border-orange-500/30',
    text: 'text-orange-400',
    icon: '',
  },
  kick: {
    bg: 'bg-blue-500/15',
    border: 'border-blue-500/30',
    text: 'text-blue-400',
    icon: '',
  },
};

const style = typeStyles[type];
---

{variant === 'default' ? (
  <span class:list={[
    "inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg text-xs font-medium border",
    style.bg,
    style.border,
    style.text
  ]}>
    <span>{label}</span>
  </span>
) : (
  <span class:list={[
    "inline-flex items-center justify-center w-6 h-6 rounded-md text-xs",
    style.bg,
    style.text
  ]}>
    {style.icon}
  </span>
)}
