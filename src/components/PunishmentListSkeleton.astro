---
interface Props {
  rows?: number;
}

const { rows = 5 } = Astro.props;
---

<div class="space-y-4 animate-pulse">
  {
    Array.from({ length: rows }).map((_, i) => (
      <div class="rounded-2xl border border-zinc-800/50 bg-zinc-900/30 p-4">
        <div class="flex flex-col sm:flex-row gap-4">
          <div class="flex items-start gap-4 flex-1">
            <div class="w-12 h-12 rounded-xl bg-zinc-800" />

            <div class="flex-1 space-y-2">
              <div class="h-5 bg-zinc-800 rounded-lg w-32" />
              <div class="h-4 bg-zinc-800/60 rounded-lg w-full max-w-md" />
              <div class="flex gap-4 pt-1">
                <div class="h-3 bg-zinc-800/40 rounded w-20" />
                <div class="h-3 bg-zinc-800/40 rounded w-28" />
                <div class="h-3 bg-zinc-800/40 rounded w-16" />
              </div>
            </div>
          </div>

          <div class="sm:w-32 space-y-1">
            <div class="h-3 bg-zinc-800/40 rounded w-16" />
            <div class="h-4 bg-zinc-800 rounded w-24" />
          </div>
        </div>
      </div>
    ))
  }
</div>
