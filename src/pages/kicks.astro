---
import Layout from "../layouts/Layout.astro";
import PunishmentCard from "../components/PunishmentCard.astro";
import Pagination from "../components/Pagination.astro";
import EmptyState from "../components/EmptyState.astro";
import { getKicks, getPlayerName } from "../lib/queries";

const page = Math.max(1, parseInt(Astro.url.searchParams.get("page") || "1"));
const perPage = 15;

let kicksResult;
let error = null;

try {
  kicksResult = await getKicks(page, perPage);
} catch (e) {
  console.error("Error fetching kicks:", e);
  error = e;
  kicksResult = {
    data: [],
    total: 0,
    page: 1,
    perPage,
    totalPages: 0,
    hasNext: false,
    hasPrev: false,
  };
}

const kicksWithNames = await Promise.all(
  kicksResult.data.map(async (kick) => ({
    ...kick,
    playerName: (await getPlayerName(kick.uuid || "")) || "Desconocido",
  }))
);
---

<Layout
  title="Expulsiones"
  description="Lista de jugadores expulsados en Mycraft Network"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1
          class="text-3xl font-clash font-bold text-white flex items-center gap-3"
        >
          Expulsiones
        </h1>
      </div>
    </div>

    {
      error ? (
        <EmptyState
          type="error"
          message="Error al cargar las expulsiones. Por favor intenta de nuevo."
        />
      ) : kicksWithNames.length === 0 ? (
        <EmptyState type="empty" message="No hay expulsiones para mostrar." />
      ) : (
        <div class="space-y-3">
          {kicksWithNames.map((kick, index) => (
            <div class={`scroll-reveal stagger-${Math.min(index + 1, 10)}`}>
              <PunishmentCard punishment={kick} type="kick" />
            </div>
          ))}
        </div>
      )
    }

    <div class="mt-8">
      <Pagination
        currentPage={kicksResult.page}
        totalPages={kicksResult.totalPages}
        baseUrl={Astro.url.pathname}
      />
    </div>
  </div>
</Layout>
